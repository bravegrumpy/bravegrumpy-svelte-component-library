{
	"name": "bravegrumpy-svelte-component-library",
	"version": "0.0.11-15",
	"scripts": {
		"dev": "vite dev",
		"build": "npm run build:css && vite build && npm run prepack",
		"build:css": "npx @tailwindcss/cli -i src/app.css -o src/lib/styles.css --minify",
		"build:css:watch": "npx @tailwindcss/cli -i src/app.css -o src/lib/styles.css --watch",
		"build:example": "npm run build:css && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "npm run build:css && svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"storybook-docs": "storybook dev --docs",
		"build-storybook-docs": "storybook build --docs"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"src/lib",
		"!src/lib/**/*.test.*",
		"!src/lib/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.1.1",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@iconify-json/hugeicons": "^1.2.14",
		"@iconify/svelte": "^5.0.0",
		"@iconify/tailwind4": "^1.0.6",
		"@storybook/addon-docs": "^9.1.5",
		"@storybook/addon-svelte-csf": "^5.0.8",
		"@storybook/addon-themes": "^9.1.5",
		"@storybook/addon-vitest": "9.1.5",
		"@storybook/sveltekit": "^9.1.5",
		"@sveltejs/adapter-netlify": "^5.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^22",
		"@vitest/browser": "^3.1.3",
		"@vitest/coverage-v8": "^3.1.3",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-storybook": "9.1.5",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"mdsvex": "^0.12.3",
		"playwright": "^1.52.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"publint": "^0.3.2",
		"storybook": "^9.1.5",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.1.3"
	},
	"keywords": [
		"svelte",
		"bravegrumpy",
		"component library",
		"ui",
		"ux",
		"ux/ux",
		"sveltekit",
		"neobrutalism",
		"personal website",
		"neobrutalism components"
	],
	"license": "MIT"
}
